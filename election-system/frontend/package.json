{
  "name": "bvs",
  "version": "0.25.9",
  "description": "Blockchain Voting System",
  "author": "Louis GÃ¶ttertz <louis.goettertz@gmail.com>",
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@uiw/react-json-view": "^2.0.0-alpha.32",
    "abi-decoder": "^2.4.0",
    "dotenv": "^17.0.1",
    "electron-store": "^8.1.0",
    "ethers": "^6.14.3",
    "framer-motion": "^12.23.12",
    "marked": "^16.1.1",
    "node-forge": "^1.3.1",
    "qr-scanner": "^1.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "node scripts/copy-abi.js && PORT=3002 react-scripts start",
    "build": "node scripts/copy-abi.js && react-scripts build",
    "postbuild": "node scripts/copy-electron.js",
    "electron": "electron .",
    "desktop": "npm run build && npm run electron",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --linux --win --x64",
    "check-build": "node scripts/check-build.js"
  },
  "build": {
    "appId": "com.bvs.app",
    "productName": "BVS",
    "files": [
      "build/**/*",
      "build/main.js",
      "build/preload.js"
    ],
    "linux": {
      "category": "Utility",
      "icon": "src/assets/icons/logo512.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/logo512.png"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  }
}
